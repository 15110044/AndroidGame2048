<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/maingame"
    tools:context=".Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@id/icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/game" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_gravity="right"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Score"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/highcsore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="2048"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textView_currentPosion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0:0" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView_maxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0:0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageButton
            android:id="@+id/button_shuffee"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Stop"
            android:background="@drawable/shuffee"/>
        <ImageButton
            android:id="@+id/button_back"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Back"
            android:background="@drawable/back"/>

        <ImageButton
            android:id="@+id/button_play"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Play"
            android:background="@drawable/stop"/>

        <ImageButton
            android:id="@+id/button_next"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Next"
            android:background="@drawable/next"/>
        <ImageButton
            android:id="@+id/button_repeat"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Stop"
            android:background="@drawable/repeat"/>
        <ImageButton
            android:id="@+id/button_mute"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="List"
            android:background="@drawable/unmute"/>

        <ImageButton
            android:id="@+id/button_listmusic"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/list"/>
        <ImageButton
            android:id="@+id/button_setting"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/setting"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:gravity="center"
            android:background="@drawable/undo"/>

        <ImageButton
            android:id="@+id/newgame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/newgame"/>

    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:id="@+id/gamelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/text_brown"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/vt1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/pic0"/>

        <ImageView
            android:id="@+id/vt2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="1"
            app:layout_row="0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="2"
            app:layout_row="0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="3"
            app:layout_row="0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:id="@+id/vt5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="0"
            app:layout_row="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="1"
            app:layout_row="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="2"
            app:layout_row="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="3"
            app:layout_row="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:id="@+id/vt9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="0"
            app:layout_row="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="1"
            app:layout_row="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="2"
            app:layout_row="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="3"
            app:layout_row="2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:id="@+id/vt13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="0"
            app:layout_row="3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt14"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="1"
            app:layout_row="3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt15"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="2"
            app:layout_row="3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/vt16"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/pic0"
            app:layout_column="3"
            app:layout_row="3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"/>
    </android.support.v7.widget.GridLayout>

</LinearLayout>